<%= form_tag '/users' do %>
    Name:
    <input type="text" name="name"><br>
    Email:
    <input type="email" name="email"><br>
    Password:
    <input type="password" name="password"><br>
    Password Confirmation:
    <input type="password" name="password_confirmation"><br>
    <input type="submit" value="Sign up">
<% end %>